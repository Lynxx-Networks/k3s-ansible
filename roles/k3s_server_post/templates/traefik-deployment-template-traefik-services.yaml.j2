apiVersion: v1
kind: Service
metadata:
  name: traefik-dashboard-service
  namespace: ingress-traefik
spec:
  type: LoadBalancer
  selector:
    app: traefik
  ports:
    - protocol: TCP
      port: 8081
      targetPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: traefik-web-service
  namespace: ingress-traefik
spec:
  type: LoadBalancer
  ports:
    - protocol: TCP
      name: web
      port: 80
    - protocol: TCP
      name: websecure
      port: 443
  selector:
    app: traefik
